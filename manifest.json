{
	"name": "内容辅助工具集",
	"version": "2.0.0",
	"author": "LostAbaddon",
	"homepage_url": "https://github.com/LostAbaddon/ArticleUtils",
	"manifest_version": 2,
	"description": "内容辅助实用工具集：显示 LaTeX；搜索当前页种的所有可下载资源；划词翻译",
	"permissions": [ "storage", "contextMenus", "tabs" ],
	"web_accessible_resources": [ "keyseq/*", "search/*", "notifier/*", "archieve/*", "MathJax2.5/*" ],
	"icons": {
		"128": "utils.png"
	},
	"background": {
		"scripts": [
			"common/common.js",
			"common/param.js",
			"common/sha256.js",
			"common/LRUcache.js",
			"common/cacheDB.js",
			"common/cacheStorage.js",
			"config.js",
			"core/background.js"
		]
	},
	"browser_action": {
		"default_title": "辅助工具",
		"default_icon": "utils.png",
		"default_popup": "page/badge.html"
	},
	"options_ui": {
		"page": "page/option.html",
		"open_in_tab": false
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"common/common.js",
				"common/param.js",
				"common/sha256.js",
				"keyseq/keyseq_content.js",
				"config.js",
				"search/inject.js",
				"archieve/archieve.js",
				"notifier/notify.js",
				"markup/markup.js",
				"markup/extensions.js",
				"core/content.js"
			]
		}
	],
	"commands": {
		"toggle-search": {
			"suggested_key": {
				"default": "Alt+S"
			},
			"description": "搜索资源"
		},
		"toggle-translation": {
			"suggested_key": {
				"default": "Alt+T"
			},
			"description": "翻译本段"
		},
		"toggle-archieve": {
			"suggested_key": {
				"default": "Alt+A"
			},
			"description": "内容存档"
		},
		"view-archieve": {
			"suggested_key": {
				"default": "Ctrl+Shift+A"
			},
			"description": "查看存档"
		}
	}
}